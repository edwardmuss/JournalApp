<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/profileLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:visibility="visible">

    <TextView
        android:id="@+id/About_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="About Author"
        android:textSize="@dimen/value_20sp"
        android:padding="@dimen/value_10dp"
        android:textStyle="bold"
        android:layout_centerHorizontal="true"/>

    <TextView
        android:id="@+id/AboutDesTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/value_16sp"
        android:padding="@dimen/value_5dp"
        android:gravity="center_horizontal"
        android:text="Developed by Edward Muss, an Engineer and developer | +254708361797"
        android:layout_below="@+id/About_tv"
        android:layout_centerHorizontal="true"/>

    <Button
        android:id="@+id/btnGetStarted"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="View Profile"
        android:textAllCaps="false"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/AboutDesTv"
        android:textSize="@dimen/value_20sp"
        android:textColor="@color/white"
        android:background="@color/colorBtn"
        android:layout_marginTop="@dimen/value_20dp"
        android:paddingLeft="@dimen/value_20dp"
        android:paddingRight="@dimen/value_20dp"
        android:onClick="view"/>

</RelativeLayout>